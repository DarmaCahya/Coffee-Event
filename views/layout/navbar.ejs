        <form action="/signin" method="GET" class="d-inline">
          <button type="submit" class="btn btn-outline-secondary fs-5">Login</button>
        </form>
        <% } else { %>
        <form action="/api/auth/signout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-outline-secondary fs-5">Logout</button>
