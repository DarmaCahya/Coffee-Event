        <form action="/admin/dashboard" method="GET" class="d-inline">
          <button type="submit" class="btn fs-5 btn-primary-green">Admin Page</button>
        </form>
        <% } %> <% if (currentPath === "/admin/dashboard") { %>
        <div class="dropdown me-3">
          <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">Action Admin</button>
          <ul class="dropdown-menu">
            <li>
              <a class="dropdown-item" href="/admin/signup">Create Jury / Admin</a>
            </li>
            <li>
              <a class="dropdown-item" href="/admin/users">List Users</a>
