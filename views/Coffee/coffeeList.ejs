<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>List Kopi</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/styles.css" />
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
    </style>
  </head>
  <body style="overflow-x: hidden" class="d-flex flex-column">
    <%- include('../layout/navbar') %>
    <div class="container mt-5 flex-1">
      <% if (userRole === "admin" ) { %>
      <button type="button" class="btn btn-primary-green me-3" onclick="location.href='/admin/coffee/create'">Create Coffee</button>
      <% } %>
      <h1 class="text-center mb-4">Coffee List</h1>
      <div class="row mb-4">
        <% if (coffees.length > 0) { %> <% coffees.forEach(function(coffee, index) { %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card">
            <img src="<%= coffee.img %>" class="card-img-top" style="height: 14rem; object-fit: cover" alt="..." />
            <div class="card-body">
              <h5 class="card-title">
                <%= coffee.coffee_beans %> <br />
                ( <%= coffee.origin %> )
              </h5>

              <!-- Additional Coffee Information -->
              <p class="card-text">
                <strong>Flavours:</strong> <%= coffee.flavours %> <br />
                <strong>Acidity:</strong> <%= coffee.acidity %> <br />
                <strong>Body:</strong> <%= coffee.body %> <br />
                <strong>After Taste:</strong> <%= coffee.aftertaste %> <br />
                <strong>Sweetness:</strong> <%= coffee.sweetness %>
              </p>

              <% if (userRole === "admin") { %>
              <div class="d-flex justify-content-center mb-3">
                <button type="button" class="btn btn-warning me-3" onclick="location.href='/admin/coffee/update/<%= coffee.id %>'">Update</button>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-event-id="<%= coffee.id %>">Delete</button>
              </div>
              <% } %>
            </div>
          </div>
        </div>
        <% }) %> <% } else { %>
        <div>
          <p class="w-full text-center">No Coffee Registered Yet.</p>
        </div>
        <% } %>
      </div>
    </div>

    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">Are you sure you want to delete this Coffee?</div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <form id="deleteForm" action="" method="POST" style="display: inline">
              <input type="hidden" name="_method" value="DELETE" />
              <button type="submit" class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <%- include('../layout/footer') %>

    <script>
      var deleteModal = document.getElementById("deleteModal");
      deleteModal.addEventListener("show.bs.modal", function (event) {
        var button = event.relatedTarget;
        var coffeeId = button.getAttribute("data-event-id");

        var deleteForm = document.getElementById("deleteForm");
        deleteForm.action = "/api/coffee/" + coffeeId + "?_method=DELETE";
      });
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
