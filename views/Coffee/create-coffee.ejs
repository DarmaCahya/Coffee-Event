<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create Coffee</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">
    <section class="py-3 py-md-5">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
              <div class="d-flex align-items-center mb-4">
                <a href="/admin/dashboard" class="btn btn-secondary">
                  <i class="bi bi-arrow-left"></i> Back
                </a>
              </div>
              <div class="card border border-light-subtle rounded-3 shadow-sm">
                <div class="card-body p-3 p-md-4 p-xl-5">
                    <h2 class="fs-5 text-center text-center mb-4 fw-bold">Create New Coffee</h2>
                    <form action="/api/coffee/create" method="POST">
                        <div class="row gy-2 overflow-hidden">
                            <!-- Coffee Name -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="coffee_name" name="coffee_name" placeholder="Coffee Name" required>
                                <label for="coffee_name" class="form-label">Coffee Name</label>
                                </div>
                            </div>
                            
                            <!-- Coffee Image -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="coffee_img" name="coffee_img" placeholder="Image URL" required>
                                <label for="coffee_img" class="form-label">Image URL</label>
                                </div>
                            </div>
                            
                            <!-- Coffee Origin -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="coffee_origin" name="coffee_origin" placeholder="Coffee Origin" required>
                                <label for="coffee_origin" class="form-label">Coffee Origin</label>
                                </div>
                            </div>
                            
                            <!-- Coffee Type -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                <input type="text" class="form-control" id="coffee_type" name="coffee_type" placeholder="Coffee Type" required>
                                <label for="coffee_type" class="form-label">Coffee Type</label>
                                </div>
                            </div>
                            
                            <!-- Flavor Notes -->
                            <div class="col-12">
                                <div class="form-floating mb-3">
                                <textarea class="form-control" id="flavor_notes" name="flavor_notes" placeholder="Flavor Notes" required></textarea>
                                <label for="flavor_notes" class="form-label">Flavor Notes</label>
                                </div>
                            </div>
                            
                            <!-- Submit Button -->
                            <div class="col-12">
                                <div class="d-grid my-3">
                                <button class="btn btn-primary btn-lg" type="submit">Create Coffee</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>
    <%- include('../layout/footer') %>
</body>
</html>