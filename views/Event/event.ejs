<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Event List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
      }
      body {
        display: flex;
        flex-direction: column;
      }
      .content {
        flex: 1;
      }
      footer {
        background-color: #f8f9fa;
        text-align: center;
      }
    </style>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <%- include('../layout/navbar') %>

    <div class="content">
      <!-- Konten utama di sini -->
      <h1 class="text-center m-5 text-green-primary font-jakarta-sans font-jakarta-sans-extra-bold">Event brewfest.id</h1>

      <div class="d-flex justify-content-center mb-4">
        <form action="/event/search" method="POST" class="d-flex me-3" role="search">
          <input class="form-control me-2" name="title" type="search" placeholder="Search events by title" aria-label="Search" />
          <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
        <% if (currentPath !== "/event") { %>
        <div class="d-flex justify-content-center">
          <button class="btn btn-secondary" onclick="location.href='/event'">Back</button>
        </div>
        <% } %> <% if (userRole === "admin" && currentPath === "/admin/dashboard") { %>
        <form action="/admin/event/create" method="GET">
          <button class="ms-3 btn btn-success" type="submit">Create Event</button>
        </form>
        <% } %>
      </div>

      <div class="d-flex justify-content-center mb-4">
        <button id="allBtn" class="btn btn-primary-green me-2 btn-change" onclick="filterEvents('all', this)">Semua</button>
        <button id="completedBtn" class="btn btn-primary-green me-2 btn-change" onclick="filterEvents('completed', this)">Completed</button>
        <button id="ongoingBtn" class="btn btn-primary-green me-2 btn-change" onclick="filterEvents('on-going', this)">On-going</button>
        <button id="upcomingBtn" class="btn btn-primary-green btn-change" onclick="filterEvents('upcoming', this)">Upcoming</button>
      </div>

      <div class="container my-5">
        <div id="no-events-message" class="text-center text-muted" style="display: none">No events found for this filter.</div>
        <div class="row" id="event-container">
          <% if (events && events.length > 0) { %> <% events.forEach((event) => { %>
          <div class="col-md-4 mb-5" data-tag="<%= event.tag %>">
            <div class="card" style="height: 33rem">
              <a href="/event/<%= event.id %>" class="card-link" style="text-decoration: none; color: black">
                <div>
                  <img src="https://i.ibb.co.com/rFTHdxG/coffee-cup.jpg" class="card-img-top" alt="Event Image" style="max-height: 20rem; object-fit: cover" onerror="this.onerror=null; this.src='https://i.ibb.co/rFTHdxG/coffee-cup.jpg';" />
                  <div class="card-body">
                    <h5 class="card-title fs-4"><%= event.title %></h5>
                    <p class="card-text fs-5 text-truncate"><%= event.description %></p>
                    <p class="card-text fs-6"><%= event.startDate.toDateString() %> sampai <%= event.endDate.toDateString() %></p>
                  </div>
                </div>
              </a>
              <% if ((userRole === "admin" && currentPath === "/admin/dashboard") || (userRole === "admin event" && event.userId === userId) ) { %>
              <div class="d-flex justify-content-center mb-3">
                <button type="button" class="btn btn-warning me-3" onclick="location.href='/admin/event/<%= event.id %>'">Update</button>
                <% if ((userRole === "admin" && currentPath === "/admin/dashboard") ) { %>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-event-id="<%= event.id %>">Delete</button>
                <% } %>
              </div>
              <% } %>
            </div>
          </div>
          <% }) %> <% } else { %>
          <div></div>
          <% } %>
        </div>
      </div>

      <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">Are you sure you want to delete this event?</div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
              <form id="deleteForm" action="" method="POST" style="display: inline">
                <input type="hidden" name="_method" value="DELETE" />
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include('../layout/footer') %>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script>
      var deleteModal = document.getElementById("deleteModal");
      deleteModal.addEventListener("show.bs.modal", function (event) {
        var button = event.relatedTarget;
        var eventId = button.getAttribute("data-event-id");

        var deleteForm = document.getElementById("deleteForm");
        deleteForm.action = "/api/event/delete/" + eventId + "?_method=DELETE";
      });

      function filterEvents(tag, button) {
        var events = document.querySelectorAll("#event-container .col-md-4");
        var noEventsMessage = document.getElementById("no-events-message");
        var eventFound = false;

        events.forEach(function (event) {
          if (tag === "all" || event.getAttribute("data-tag") === tag) {
            event.style.display = "block";
            eventFound = true;
          } else {
            event.style.display = "none";
          }
        });

        if (eventFound) {
          noEventsMessage.style.display = "none";
        } else {
          noEventsMessage.style.display = "block";
        }

        var buttons = document.querySelectorAll(".btn-change");
        buttons.forEach(function (btn) {
          btn.classList.remove("btn-secondary");
          btn.classList.add("btn-primary-green");
        });
        button.classList.remove("btn-primary-green");
        button.classList.add("btn-secondary");
      }

      window.addEventListener("DOMContentLoaded", () => {
        const urlParams = new URLSearchParams(window.location.search);
        const tag = urlParams.get("tag");
        const buttonId = urlParams.get("button");

        if (tag && buttonId) {
          const button = document.getElementById(buttonId);
          if (button) {
            filterEvents(tag, button);
          }
        } else {
          const allButton = document.getElementById("allBtn");
          if (allButton) {
            filterEvents("all", allButton);
          }
        }
      });
    </script>
  </body>
</html>
