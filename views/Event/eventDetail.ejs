<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Event Detail</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700&display=swap"
        rel="stylesheet">
    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .timeline {
            margin-top: 20px;
        }

        .winners {
            margin-top: 30px;
        }

        .winners img {
            width: 100px;
            height: auto;
        }

        .modal-body input {
            margin-bottom: 10px;
        }
    </style>
</head>

<body>
    <%- include('../layout/navbar') %>

    <div class="container mt-5">
        <% if (userRole === "admin") { %>
            <div class="d-flex mb-3">
                <button type="button" class="btn btn-warning me-3" onclick="location.href='/admin/event/<%= event.id %>'">Update</button>
                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-event-id="<%= event.id %>">Delete</button>
            </div>
        <% } %>

        <div class="card">
            <img src="<%= event.image %>" class="card-img-top" alt="image">
            <div class="card-body">
                <h1 class="card-title"><%= event.title %></h1>
                <p class="card-text"><%= event.tag %></p>
                <p class="card-text"><%= event.description %></p>
                <p class="card-text">Waktu Pelaksanaan: <%= event.startDate.toDateString() %> sampai <%= event.endDate.toDateString() %></p>
            </div>
        </div>

        <% if (userRole === "jury" || userRole === "admin") { %>
        <button type="button" class="btn btn-primary btn-lg my-5" data-bs-toggle="modal" data-bs-target="#pinModal">
            Form Penilaian
        </button>
        <% } %>

        <div class="winners">
            <h3 class="text-center fw-bold fs-3">Pemenang Kompetisi</h3>
            <div class="my-5 d-flex justify-content-around">
                <div>
                    <img src="/path/to/trophy.png" alt="Trophy Image">
                    <p>Juara I<br>Lorem ipsum</p>
                </div>
                <div>
                    <img src="/path/to/trophy.png" alt="Trophy Image">
                    <p>Juara II<br>Lorem ipsum</p>
                </div>
                <div>
                    <img src="/path/to/trophy.png" alt="Trophy Image">
                    <p>Juara III<br>Lorem ipsum</p>
                </div>
            </div>
        </div>

        <% if (userRole === "jury") { %>
            <%- include('../layout/score') %>
        <% } else if (userRole === "admin") { %>
            <h3 class="fw-bold fs-3">List Scores</h3>
            <% if (scores && scores.length > 0) { %>
                <table class="table table-sm table-striped-columns mb-5">
                    <thead class="fs-5">
                        <tr>
                            <th scope="col">Name Jury</th>
                            <th scope="col">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% scores.forEach(function(scoreList) { %>
                            <tr>    
                                <td><%= score.User ? score.User.username : 'Unknown' %></td>
                                <td><%= scoreList.total_score %></td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            <% } else { %>
                <p>No scores available for this event.</p>
            <% } %>
        <% } else { %>
            <div class="mt-4">
                <h3>Login Juri</h3>
                <p>Untuk juri silahkan login disini, <a href="/signin">Login</a></p>
            </div>
        <% } %>

    </div>

        <!-- Footer -->
        <footer class="bg-light text-center text-lg-start mt-auto">
            <div class="text-center p-3">
                Â© 2024 KompetisiKopi. All Rights Reserved
            </div>
        </footer>
    
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
