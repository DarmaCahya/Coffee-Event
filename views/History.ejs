<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>History Jury</title>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800;900&display=swap" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body style="overflow-x: hidden">
    <%- include('layout/navbar') %>
    <div class="container mt-5">
      <h1 class="text-center mb-4">Jury History Submit Scores</h1>

      <!-- Tabel List History -->
      <table class="table table-striped table-hover">
        <% if (userRole === "jury") { %>
        <thead>
          <tr>
            <th>No</th>
            <th>Nama Event</th>
            <th>Nama Peserta</th>
            <th>Tanggal Submit</th>
          </tr>
        </thead>
        <tbody>
          <% scoresJury.forEach((score, index) => { %> <% if (score.userId === juryId) { %>
          <tr>
            <td><%= index + 1 %></td>
            <% eventsJury.forEach((event, index) => { %> <% if (event.id == score.eventId) { %>
            <td>
              <a href="/event/<%= score.eventId %>"><%= event.title %></a>
            </td>
            <% } %> <% }); %>
            <td><%= score.representing %></td>
            <td><%= new Date(score.createdAt).toLocaleDateString() %></td>
          </tr>
          <% } %> <% }); %>
        </tbody>
        <% } else if (userRole === "admin") { %>
        <thead>
          <tr>
            <th>No</th>
            <th>Event Name</th>
            <th>Participant Name</th>
            <th>Jury Name</th>
            <th>Score</th>
            <th>Submit Date</th>
          </tr>
        </thead>
        <tbody>
          <% scores.forEach((score, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <% events.forEach((event, index) => { %> <% if (event.id == score.eventId) { %>
            <td>
              <a href="/event/<%= score.eventId %>"><%= event.title %></a>
            </td>
            <% } %> <% }); %>
            <td><%= score.representing %></td>
            <td><%= score.judge %></td>
            <td><%= score.total_score %></td>
            <td><%= new Date(score.createdAt).toLocaleDateString() %></td>
          </tr>
          <% }); %>
        </tbody>
        <% } %>
      </table>
    </div>
    <%- include('layout/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  </body>
</html>
