<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Admin Dashboard</title>
</head>
<body>
    <h1>Admin Dashboard</h1>
    <h2>Logout</h2>
    <h2>Manage Events</h2>
    <button onclick="location.href='/admin/event/create'">Create New Event</button>

    <ul>
        <% events.forEach(event => { %>
            <li>
                <a href="/event/<%= event.id %>"><%= event.title %></a>
                <button onclick="location.href='/admin/event/<%= event.id %>'">Update</button>
                <form action="/api/event/delete/<%= event.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
                <a href="/admin/event/<%= event.id %>/scores">View Scores</a>
            </li>
        <% }) %>
    </ul>

    <form action="/api/auth/signout" method="POST">
        <button type="submit">Score</button>
    </form>

    <form action="/api/auth/signout" method="POST">
        <button type="submit">Logout</button>
    </form>
</body>
</html>
