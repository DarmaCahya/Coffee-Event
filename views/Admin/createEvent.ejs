<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Create Event</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css" />
    <style>
      .btn-primary-green {
        background-color: #2d6a4f;
        color: #fff;
      }
    </style>
  </head>
  <body>
    <section class="bg-light py-3 py-md-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
            <div class="d-flex align-items-center mb-4">
              <a href="history:back" class="btn btn-secondary"> <i class="bi bi-arrow-left"></i> Back </a>
            </div>
            <div class="card border border-light-subtle rounded-3 shadow-sm">
              <div class="card-body p-3 p-md-4 p-xl-5">
                <h2 class="fs-5 text-center text-center mb-4 fw-bold">Create New Event</h2>
                <form action="/api/event/create" method="POST">
                  <div class="row gy-2 overflow-hidden">
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="image" name="image" placeholder="Image URL" required />
                        <label for="image" class="form-label">Image URL</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="title" name="title" placeholder="Title" required />
                        <label for="title" class="form-label">Title</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <textarea class="form-control" id="description" name="description" placeholder="Description" required></textarea>
                        <label for="description" class="form-label">Description</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <select class="form-select" id="tag" name="tag" required>
                          <option value="completed">Completed</option>
                          <option value="on-going">On-Going</option>
                          <option value="upcoming">Upcoming</option>
                        </select>
                        <label for="tag" class="form-label">Tag</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="date" class="form-control" id="startDate" name="startDate" placeholder="Start Date" required />
                        <label for="startDate" class="form-label">Start Date</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="date" class="form-control" id="endDate" name="endDate" placeholder="End Date" required />
                        <label for="endDate" class="form-label">End Date</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="winner1" name="winner1" placeholder="Winner 1" />
                        <label for="winner1" class="form-label">Winner 1</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="winner2" name="winner2" placeholder="Winner 2" />
                        <label for="winner2" class="form-label">Winner 2</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="winner3" name="winner3" placeholder="Winner 3" />
                        <label for="winner3" class="form-label">Winner 3</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="pin" name="pin" placeholder="Pin" minlength="4" maxlength="4" required />
                        <label for="pin" class="form-label">Pin</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-floating mb-3">
                        <select class="form-select" id="adminEvent" name="adminEvent" required>
                          <option value="" disabled selected>Select Admin Event</option>
                          <% adminEvents.forEach(function(adminEvent) { %>
                          <option value="<%= adminEvent.id %>"><%= adminEvent.username %></option>
                          <% }) %>
                        </select>
                        <label for="adminEvent" class="form-label">Admin Event</label>
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="d-grid my-3">
                        <button class="btn btn-primary-green btn-lg" type="submit">Create Event</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <%- include('../layout/footer') %>
  </body>
</html>
