<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Update Event</title>
    <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
</head>
<body>
    <section class="bg-light py-3 py-md-5">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-5 col-xxl-4">
              <div class="d-flex align-items-center mb-4">
                <a href="#" onclick="window.history.back();" class="btn btn-secondary">
                  <i class="bi bi-arrow-left"></i> Back
                </a>
              </div>
              <div class="card border border-light-subtle rounded-3 shadow-sm">
                <div class="card-body p-3 p-md-4 p-xl-5">
                  <h2 class="fs-5 text-center text-secondary mb-4 fw-bold">Update Event</h2>
                  <form action="/api/event/update/<%= event.id %>?_method=PUT" method="POST">
                    <input type="hidden" name="_method" value="PUT">
                    <div class="row gy-2 overflow-hidden">
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="image" name="image" placeholder="Image URL" value="<%= event.image %>" required>
                          <label for="image" class="form-label">Image URL</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="title" name="title" placeholder="Title" value="<%= event.title %>" required>
                          <label for="title" class="form-label">Title</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <textarea class="form-control" id="description" name="description" placeholder="Description" required><%= event.description %></textarea>
                          <label for="description" class="form-label">Description</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <select class="form-select" id="tag" name="tag" required>
                            <option value="completed" <%= event.tag === 'completed' ? 'selected' : '' %>>Completed</option>
                            <option value="on-going" <%= event.tag === 'on-going' ? 'selected' : '' %>>On-Going</option>
                            <option value="upcoming" <%= event.tag === 'upcoming' ? 'selected' : '' %>>Upcoming</option>
                          </select>
                          <label for="tag" class="form-label">Tag</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="date" class="form-control" id="startDate" name="startDate" placeholder="Start Date" value="<%= event.startDate ? event.startDate.toISOString().split('T')[0] : '' %>" required>
                          <label for="startDate" class="form-label">Start Date</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="date" class="form-control" id="endDate" name="endDate" placeholder="End Date" value="<%= event.endDate ? event.endDate.toISOString().split('T')[0] : '' %>" required>
                          <label for="endDate" class="form-label">End Date</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="winner1" name="winner1" placeholder="Winner 1" value="<%= event.winner1 %>">
                          <label for="winner1" class="form-label">Winner 1</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="winner2" name="winner2" placeholder="Winner 2" value="<%= event.winner2 %>">
                          <label for="winner2" class="form-label">Winner 2</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="winner3" name="winner3" placeholder="Winner 3" value="<%= event.winner3 %>">
                          <label for="winner3" class="form-label">Winner 3</label>
                        </div>
                      </div>
                      <div class="col-12">
                        <div class="form-floating mb-3">
                          <input type="text" class="form-control" id="pin" name="pin" placeholder="Pin" minlength="4" maxlength="4" value="<%= event.pin %>" required>
                          <label for="pin" class="form-label">Pin</label>
                        </div>
                      </div>
                      <% if (userRole === "admin") { %>
                        <div class="col-12">
                          <div class="form-floating mb-3">
                            <select class="form-select" id="adminEvent" name="adminEvent" required>
                              <option value="" disabled>Select Admin Event</option>
                              <% adminEvents.forEach(function(adminEvent) { %>
                                <option value="<%= adminEvent.id %>" <%= adminEvent.id === event.userId ? 'selected' : '' %>>
                                  <%= adminEvent.username %>
                                </option>
                              <% }) %>
                            </select>
                            <label for="adminEvent" class="form-label">Admin Event</label>
                          </div>
                        </div>
                      <% } %>                                          
                      <div class="col-12">
                        <div class="d-grid my-3">
                          <button class="btn btn-primary btn-lg" type="submit">Update Event</button>
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
    </section>
    <%- include('../layout/footer') %>

</body>
</html>